<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace='dao.mapper.CancionMapper'>

	<select id='existeCancion'
		resultType='pojo.Cancion'>
		SELECT * FROM cancion where id = #{id}
	</select>

	<select id='getCanciones'>
		SELECT * FROM cancion
	</select>
	
	<select id="getCancionesRecom" resultType='pojo.Cancion'>
		SELECT * FROM cancion ORDER BY RAND() limit 10
	</select>

	<insert id='insertCancion' parameterType='Cancion'
		useGeneratedKeys='true' keyProperty='id'>
		INSERT INTO cancion(titulo,idGenero,idAlbum,idArtista) values('#{titulo}','#{genero}','#{album}','#{artista}')
	</insert>

	<update id='updateCancion' parameterType='Cancion'>
		UPDATE cancion
		SET
		titulo = #{titulo},
		idGenero = #{genero},
		idAlbum = #{album},
		idArtista = #{artista}
		WHERE id = #{id}
	</update>

	<delete id='deleteCancion' parameterType='Cancion'>
		DELETE FROM cancion WHERE id = #{id}
	</delete>


</mapper>