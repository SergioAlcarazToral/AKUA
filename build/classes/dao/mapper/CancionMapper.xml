<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace='dao.mapper.CancionMapper'>

	<select id='existeCancion'
		resultType='pojo.Cancion'>
		SELECT * FROM cancion where id = #{id}
	</select>

	<select id="getCancion" resultType="pojo.Cancion">
		Select * from cancion where id = #{id}
	</select>

	<select id='getCanciones'>
		SELECT * FROM cancion
	</select>
	
	<select id="getCancionesAlbum" resultType="pojo.Cancion">
		Select cancion.id as id, cancion.titulo as titulo, archivo from cancion, album where cancion.idAlbum = #{id}
	</select>
	
	<select id="getCancionesRecom" resultType='pojo.Cancion'>
		SELECT * FROM cancion ORDER BY RAND() limit 10
	</select>

	<insert id='insertCancion' parameterType='pojo.Cancion'
		useGeneratedKeys='true' keyProperty='id'>
		INSERT INTO cancion(titulo,idGenero,idAlbum,archivo) values(#{titulo},#{genero},#{album},#{archivo})
	</insert>

	<update id='updateCancion' parameterType='Cancion'>
		UPDATE cancion
		SET
		titulo = #{titulo},
		idGenero = #{genero}
		WHERE id = #{id}
	</update>

	<delete id='deleteCancion' parameterType='Cancion'>
		DELETE FROM cancion WHERE id = #{id}
	</delete>

</mapper>